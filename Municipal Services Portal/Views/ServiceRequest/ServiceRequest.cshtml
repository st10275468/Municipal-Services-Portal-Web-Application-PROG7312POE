@model Municipal_Services_Portal.Models.Issue[]

@{
    ViewData["Title"] = "Service Request Status";

    //Retrieves all the data from the controller
    var bstIssues = ViewBag.bstIssues as List<Municipal_Services_Portal.Models.Issue> ?? new List<Municipal_Services_Portal.Models.Issue>();
    var heapIssues = ViewBag.heapIssues as List<Municipal_Services_Portal.Models.Issue> ?? new List<Municipal_Services_Portal.Models.Issue>();
    var relatedCategories = ViewBag.relatedCategories as List<string> ?? new List<string>();
    var relatedCategoryIssues = ViewBag.relatedCategoryIssues as List<Municipal_Services_Portal.Models.Issue> ?? new List<Municipal_Services_Portal.Models.Issue>();
    var searchID = ViewBag.SearchID as int?;
}

<div class="service-request" style="min-height: 800px;">
    <div class="container">
        <!--Main heading of the page -->
        <div class="service-request-header" style="padding-top: 40px;">
            <h1>Service Request Status</h1>
            <p class="service-text" style="font-size: 20px;">Track the status of your service requests</p>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <!--Request ID search form -->
                <div class="issues-filter mb-4">
                    <form method="get" asp-controller="ServiceRequest" asp-action="ServiceRequest">
                        <div class="input-group">
                            <input type="number" name="searchID" placeholder="Search using Request ID" class="form-control" value="@searchID" />
                            <button type="submit" class="btn btn-primary" style="background-color: var(--primary-color); border: var(--primary-color);"> Search</button>
                        </div>
                    </form>
                </div>

                <!--Main section displaying all issues or specific issue relating the user input-->
                <div class="issues-grid" style="min-height: 100px;" id="issuesGrid">
                    @if (bstIssues.Count == 0)
                    {
                        <div class="no-issues"> No issues found</div>
                    }
                    else
                    {
                        @foreach (var issue in bstIssues)
                        {
                            <div class="issue-card mb-3 p-3" data-issueid="@issue.IssueID" style="border:1px solid #ddd; border-radius:10px;">
                                <h5>@issue.Category</h5>
                                <p class="location"><strong>Location:</strong> @issue.Location</p>
                                <p class="description"><strong>Description:</strong> @issue.Description</p>
                                <p class="date"><strong>Date submitted:</strong> @issue.DateSubmitted.ToString("dd MMM yyyy HH:mm")</p>
                                <p class="status">
                                    <span class="badge @(issue.Status == "Pending" ? "pending" : issue.Status == "In Progress" ? "inprogress" : "resolved")"> @issue.Status</span>
                                </p>
                                <p class="description"><strong>Request ID: </strong> @issue.IssueID</p>
                                @if (!string.IsNullOrEmpty(issue.MediaPath))
                                {
                                    <a href="@issue.MediaPath" target="_blank" class="btn-"> View Attachment</a>
                                }
                            </div>
                        }
                    }
                </div>

                <!--2nd Main section that displays any issues that have related category connections to the searched issue-->
                @if (searchID.HasValue)
                {
                    <h4 class="recently-viewed-heading" style="text-align:center; margin-top: 15px; margin-bottom: 15px">Issues from related categories</h4>

                    @if (relatedCategoryIssues.Count == 0)
                    {
                        <p style="text-align:center; color:white;">No related issues found</p>
                    }
                    else
                    {
                        <div class="issues-grid">
                            @foreach (var issue in relatedCategoryIssues)
                            {
                                <div class="issue-card mb-3 p-3" style="border: 1px solid #ddd; border-radius: 10px;">
                                    <h5>@issue.Category</h5>
                                    <p class="location"><strong>Location:</strong> @issue.Location</p>
                                    <p class="description"><strong>Description:</strong> @issue.Description</p>
                                    <p class="date"><strong>Date submitted:</strong> @issue.DateSubmitted.ToString("dd MMM yyyy HH:mm")</p>
                                    <p class="status">
                                        <span class="badge @(issue.Status == "Pending" ? "pending" : issue.Status == "In Progress" ? "inprogress" : "resolved")"> @issue.Status</span>
                                    </p>
                                    <p class="description"><strong>Request ID: </strong> @issue.IssueID</p>
                                    @if (!string.IsNullOrEmpty(issue.MediaPath))
                                    {
                                        <a href="@issue.MediaPath" target="_blank" class="btn-"> View Attachment</a>
                                    }
                                
                                </div>
                            }
                        </div>
                    }
                }
            </div>

            <!--Side bar section of the page-->
            <div class="col-lg-3">

                <!--Top of sidebar which displays the issues in the most prioritized order-->
                <h4 class="recently-viewed-heading"> Priority Service Requests</h4>
                <ul class="list-group" id="priorityList">
                    @if (heapIssues.Count > 0)
                    {
                        foreach (var issue in heapIssues)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center" style="border-radius:10px; margin-bottom:5px;color: var(--primary-color);">
                                <span>@issue.Category - @issue.IssueID</span>
                                <span class="badge @(issue.Status == "Pending" ? "pending" : issue.Status == "In Progress" ? "inprogress" : "resolved")"> @issue.Status</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item" style="color:white !important; ">No priority issues</li>
                    }
                </ul>

                <!--Bottom of side bar that displays teh related categories to the searched request -->
                <h4 class="recently-viewed-heading" style="margin-top: 10px;">Related Categories</h4>
                @if (relatedCategories.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var category in relatedCategories)
                        {
                            <li class="list-group-item" style="border-radius:10px; margin-bottom: 5px; color: var(--primary-color);">
                                @category
                            </li>
                        }
                    </ul>
                }
                else
                {

                    <p style="color:white !important;">No related categories</p>
                }

            </div>


        </div>
    
    </div>
</div>
<script>
    function filterIssues(){
        var input = document.getElementById('searchInput').value;
        var cards = document.querySelectorAll('.issue-card');

        cards.forEach(card => {
            var issueID = card.dataset.issueID;
            card.style.display = issueID.includes(input) ? 'flex' : 'none';
        });
    }

</script>
